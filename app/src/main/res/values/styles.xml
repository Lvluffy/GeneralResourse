<resources>

    <style name="AppTheme" parent="ResTheme" />

    <style name="AnimationActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/bottom_in_bottom_out</item>

    </style>

    <style name="bottom_in_bottom_out">
        <item name="android:activityOpenEnterAnimation">@anim/res_slide_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/res_slide_bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/res_slide_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/res_slide_bottom_out</item>
    </style>

</resources>
